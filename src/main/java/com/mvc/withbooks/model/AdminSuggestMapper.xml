<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
 
 <mapper namespace="com.mvc.withbooks.AdminSuggestMapper"> 

	 <insert id="insertAdminSuggest" parameterType="AdminSuggestDTO">
	 	insert into adminSuggest(Sunum, SuggestNovel, Nnum) values(seq_adminSuggest.nextval,#{suggestNovel},#{novelDTO.getNnum})
	 </insert>
	 
	 <delete id="deleteAdminSuggest" parameterType="int">
	   delete from adminSuggest where Sunum= #{Sunum}
	 </delete>
	 
	  <select id="listNovel" resultType="NovelDTO">
	 	select * from novel
	 </select>
	 
	 <select id="listAdminSuggest" resultType="AdminSuggestDTO">
	 	select * from adminSuggest
	 </select>
	 
	 <select id="searchAdminSuggest">
	 
	 </select>
 
 
 </mapper>